<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - APOD Gallery</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <a class="brand" asp-controller="Home" asp-action="Index">APOD Gallery</a>
            <ul class="nav-links">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            </ul>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; 2026 - APOD Gallery - NASA Astronomy Picture of the Day</p>
    </footer>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
